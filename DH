-- Teleport Buttons
local function createTPButton(name,callback)
    TPTab:CreateButton({Name=name,Callback=callback})
end

createTPButton("EventShop",function() teleportTo("eventshop") end)
createTPButton("EventShop View",function()
    if activeViewPart then stopViewing() else startViewing(findPartByName("eventshop")) end
end)
createTPButton("Boss",function() teleportTo("bossspawn") end)
createTPButton("Boss View",function()
    if activeViewPart then stopViewing() else startViewing(findPartByName("bossspawn")) end
end)
createTPButton("Tokyo",function() teleportToPlace(14220581261) end)
createTPButton("Forest",function() teleportToPlace(14220581641) end)
